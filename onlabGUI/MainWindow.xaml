    <TabControl >
        <TabItem Header="Calibrated Hull-White Process">
            <oxy:Plot Title="{Binding Title}" LegendPlacement="Outside">
                <oxy:Plot.Series>
                    <oxy:LineSeries Title="yield" ItemsSource="{Binding yield}"/>
                    <oxy:LineSeries Title="theta" ItemsSource="{Binding theta}"/>
                    <oxy:LineSeries Title="fwrate" ItemsSource="{Binding forwardrate}" Visibility="Visible"/>
                    <oxy:LineSeries Title="hw1" ItemsSource="{Binding hw1}" Visibility="Visible"/>
                    <oxy:LineSeries Title="hw2" ItemsSource="{Binding hw2}" Visibility="Visible"/>
                    <oxy:LineSeries Title="hw3" ItemsSource="{Binding hw3}" Visibility="Visible"/>

                </oxy:Plot.Series>
            </oxy:Plot>
        </TabItem>
        <TabItem Header="Monte-Carlo Pricer">
            <StackPanel>
                <TextBlock Text="Bond Pricer" FontSize="18" FontWeight="Bold"/>
                <local:BondInput />
                <TextBlock Text="Bond Option Pricer" FontSize="18" FontWeight="Bold"/>
                <local:BondInput />
            </StackPanel>
        </TabItem>
        <TabItem Header="Yield Curve Source">
            <local:YieldCurveSelector x:Name="ycSelector"/>
        </TabItem>
        
